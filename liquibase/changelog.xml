<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet author="Rattapong K." id="1">
        <createSequence  dataType="int"
                         incrementBy="1"
                         minValue="1"
                         schemaName="public"
                         sequenceName="user_id_seq"
                         startValue="1"/>
        <createTable tableName="users">
            <column name="id" type="bigint" defaultValueSequenceNext="user_id_seq">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar"/>
        </createTable>
    </changeSet>
    <changeSet author="Rattapong K." id="2">
        <addColumn tableName="users">
            <column name="country" type="varchar(2)"/>
        </addColumn>
    </changeSet>
    <changeSet author="Rattapong K." id="3">
        <insert tableName="users">
            <column name="name" value="RTPK"/>
            <column name="country" value="TH"/>
        </insert>
        <insert tableName="users">
            <column name="name" value="RTPK2"/>
            <column name="country" value="TH"/>
        </insert>
    </changeSet>
    <changeSet author="Rattapong K." id="4">
        <insert tableName="users">
            <column name="name" value="RTPK4"/>
            <column name="country" value="TH"/>
        </insert>
    </changeSet>
</databaseChangeLog>