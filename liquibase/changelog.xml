<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet author="Rattapong K." id="1">
        <createSequence  dataType="bigint"
                         incrementBy="1"
                         minValue="1"
                         schemaName="public"
                         sequenceName="user_id_seq"
                         startValue="1"/>
        <createTable tableName="users">
            <column name="id" type="bigint" defaultValueSequenceNext="user_id_seq">
            </column>
            <column name="username" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar(255)" >
                <constraints nullable="false"/>
            </column>
            <column name="account_non_locked" type="bool" defaultValue="true">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet author="Rattapong K." id="2">
        <createSequence  dataType="bigint"
                         incrementBy="1"
                         minValue="1"
                         schemaName="public"
                         sequenceName="product_id_seq"
                         startValue="1"/>
        <createTable tableName="products">
            <column name="id" type="bigint" defaultValueSequenceNext="product_id_seq">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="decimal(10,2)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>